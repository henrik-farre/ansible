MODULES=()
{% if 'Intel Corporation' in {{ ansible_facts.ansible_local.hardware.video|map(attribute='vendor')|list }} %}
MODULES+=(i915)
{% elif 'NVIDIA Corporation' in {{ ansible_facts.ansible_local.hardware.video|map(attribute='vendor')|list }} %}
MODULES+=(nvidia nvidia_modeset nvidia_uvm nvidia_drm)
{% elif 'Advanced Micro Devices, Inc. [AMD/ATI]' in {{ ansible_facts.ansible_local.hardware.video|map(attribute='vendor')|list }} %}
MODULES+=(amdgpu)
{% endif %}

BINARIES=()

# if "modconf" hook is loaded files from /etc/modprobe.d/ and /usr/lib/modprobe.d/ is included
FILES=()

# Hooks are referred to by their name, and executed in the order they exist in the HOOKS array of the configuration file.
HOOKS=(base udev autodetect modconf keyboard keymap)
{% if ansible_facts.form_factor in ['Laptop', 'Notebook'] %}
HOOKS+=(consolefont)
{% endif %}
{% if ansible_facts.cmdline.cryptdevice is defined %}
HOOKS+=(encrypt)
{% endif %}
HOOKS+=(modconf block filesystems fsck)
